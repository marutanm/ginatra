!!! 5
%html
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title Ginatra
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
    %script{:src => prefix_url("src/ginatra.js"), :type => "text/javascript"}
    %script{:src => prefix_url("src/highlight.pack.js"), :type => "text/javascript"}
    :javascript
      hljs.initHighlightingOnLoad();
    %link{:href => prefix_url("github.css"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => prefix_url("bootstrap.css"), :media => "screen", :rel => "stylesheet", :type => "text/css"}
    %link{:href => prefix_url("style.css"), :media => "screen", :rel => "stylesheet", :type => "text/css"}

  %body
    .topbar
      .fill
        .container
          %h3
            %a{:href => prefix_url} Ginatra
    .container
      = yield

    %footer
      Ginatra &mdash; &copy; 2009 Samuel Elliott &mdash;
      %a{:href => "http://www.opensource.org/licenses/mit-license.php"} MIT Licence
